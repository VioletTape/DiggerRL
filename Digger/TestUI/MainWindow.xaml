<Window x:Class="TestUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="525">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Height="30"></StackPanel>
        <StackPanel DockPanel.Dock="Bottom" Height="30">
            <Label x:Name="debugLabel"/>
        </StackPanel>
        
        <Grid x:Name="grid" Width="500" Height="500" />
    </DockPanel>
</Window>
